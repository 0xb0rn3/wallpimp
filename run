        print(f"{Fore.YELLOW}0.{Style.RESET_ALL} Exit")
        
        butterfly_choice = input(f"\n{Fore.GREEN}Enter your choice: {Style.RESET_ALL}").strip()
        
        if butterfly_choice == '1':
